---
import { getCollection } from 'astro:content';

const posts = await getCollection('posts');

// Helper to format date
const formatDate = (iso: string) => {
  const date = new Date(iso);
  return date.toLocaleDateString('en-US', {
    month: 'short',
    day: 'numeric',
    year: 'numeric'
  });
};
---

<div class={`grid gap-6 mt-8 place-items-center ${
  posts.length === 1
    ? 'grid-cols-1'
    : posts.length === 2
    ? 'grid-cols-1 md:grid-cols-2'
    : 'md:grid-cols-2 lg:grid-cols-3'
}`}>
  {posts.map((post) => (
    <article id="auctions" class="rounded-xl border-5 bg-white p-4 shadow-md w-full max-w-md text-center">
      <h3 class="text-xl font-semibold mb-2">{post.data.title}</h3>
      {post.data.image && (
        <img
          src={post.data.image}
          alt={post.data.title}
          class="h-48 w-full object-cover rounded-md mb-4"
        />
      )}

      <p class="text-sm text-gray-700 mb-2">
        {formatDate(post.data.date)} &middot; {post.data.time} &middot; {post.data.location}
      </p>

      {post.data.link && (
        <a
          href={post.data.link}
          target="_blank"
          rel="noopener noreferrer"
          class="inline-block mt-2 text-blue-700 hover:underline font-medium"
        >
          View on AuctionZip
        </a>
      )}
    </article>
  ))}
</section>
